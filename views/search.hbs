<!DOCTYPE html>
<html lang="en">

<head>
    {{> headAttributes}}
    <link href="/css/home.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/search.css">
    <script defer src="/js/search.js"></script>

</head>

<body class="c-app c-dark-theme">

    {{> navSidebar}}

    <div class="c-wrapper">

        {{> header}}

        <div class="c-body p-2">
            <div class="d-flex justify-content-center">
                <div class="card" style="width: 570px !important;">
                    <div class="card-body text-center pt-0">
                        <div class="card-header bg-transparent">
                            <h3 class="card-title">Buscador</h3>
                        </div>
                        <div id="divSearchTitulo">
                            <p class="mt-1" style="justify-self: end;">Titulo:</p><input class="form-control"
                                type="text" placeholder="Titutlo" aria-label="Search" id="titulo">
                            <div>
                            </div>
                        </div>
                        <div id="divSearchAll">
                            <div class="mt-4">
                                Genero: <br><select class="d-inline form-control w-75 ml-3" id="genero">
                                    
                                </select><br>
                            </div>
                            <div>
                                Region: <input class="d-inline form-control w-75 ml-3 pl-2 pr-0" type="text" id="region"
                                    placeholder="ES" aria-label="region"><br>
                                <br>
                                AÃ±o: <br><input class="d-inline form-control w-75 ml-3 pl-2 pr-0" type="number"
                                    id="desde" min="1897" max="2023" placeholder="1897"><br>
                            </div>
                        </div>



                        <button class="btn btn-secondary detail mt-4 p-2" id="search">Buscar</button>
                    </div>



                </div>
            </div>
            <div id="moviesBuscadas">
                {{#each movies}}
                <div class="card">
                    <div class="card-body text-center pt-0">
                        <div class="card-header bg-transparent">
                            <h6 class="card-title">{{this.title}}</h6>
                        </div>
                        <img src="{{#if this.poster_path}}https://image.tmdb.org/t/p/w400{{this.poster_path}}
            {{else}}https://english2mee.files.wordpress.com/2018/07/proximamente.png?w=700{{/if}}" alt="MoviePoster"
                            id="MoviePoster">
                        <p class="card-text"></p>
                        <a class="DetailMovie  mb-2" href="/detail/?idMovie={{this.id}}"
                            style="cursor: pointer;"><button class="btn btn-secondary detail">Details</button></a>
                    </div>
                </div>
                {{/each}}
            </div>

            <div class="card p-3 w-100 align-self-center">
                <div class="card-body p-0">
                    <nav aria-label="Page navigation">
                        <ul class="pagination m-0 justify-content-center" id="pagination">
                            {{{paginationText}}}
                        </ul>
                    </nav>
                </div>
            </div>

        </div>

        <!-- CoreUI and necessary plugins-->
        <script src="vendors/@coreui/coreui/js/coreui.bundle.min.js"></script>
        <script src="vendors/@coreui/icons/js/svgxuse.min.js"></script>

</body>

</html>